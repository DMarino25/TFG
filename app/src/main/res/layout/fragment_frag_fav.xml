<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Encabezado -->
        <LinearLayout
            android:id="@+id/rz95w8mc64y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/s5e27fdsw1"
            android:paddingVertical="3dp"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/r9xlldorwgqc"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />
            <LinearLayout
                android:id="@+id/rz3lqvtpwmwk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/rmfqrw6hro3k"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginEnd="150dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Favorits" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/r0vkjdtxiwrk9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rqujhbi1gak9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="0dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/go2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@android:drawable/ic_search_category_default" />


                <LinearLayout
                    android:id="@+id/rhbs6erfpcl"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="#D9D9D9"
                    android:orientation="vertical"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="8dp">

                    <EditText
                        android:id="@+id/cerca2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Cerca joc..."
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E2D4E7"
            android:orientation="vertical"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/no_favorites_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No n'hi ha favorits"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
