<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido previamente dentro del ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Encabezado -->
        <LinearLayout
            android:id="@+id/rz95w8mc64y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/s5e27fdsw1"
            android:paddingVertical="3dp"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/r9xlldorwgqc"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />
            <LinearLayout
                android:id="@+id/rz3lqvtpwmwk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/rmfqrw6hro3k"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginEnd="82dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Favorits" />
            <LinearLayout
                android:id="@+id/rj9rsrosmfrn"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:background="@drawable/s2c2c2csw1cr32b4a3b73"
                android:paddingHorizontal="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rjp4vvueqwi"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>

        <!-- Contenedor de filtro y bÃºsqueda -->
        <LinearLayout
            android:id="@+id/r0vkjdtxiwrk9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rqujhbi1gak9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="13dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/r670cjnim774"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Filtro:" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <LinearLayout
                    android:id="@+id/rhbs6erfpcl"
                    android:layout_width="279dp"
                    android:layout_height="wrap_content"
                    android:background="#D9D9D9"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rijb6zudwun7"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Cerca joc..." />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Nuevo LinearLayout con fondo "#E2D4E7" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E2D4E7"
            android:orientation="vertical"
            android:paddingBottom="122dp">


            <TextView
                android:id="@+id/no_favorites_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No n'hi ha favorits"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
