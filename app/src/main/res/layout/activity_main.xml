<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2D4E7"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/r9j221rqd9x9w"
            android:paddingTop="51dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="33dp"
            android:layout_marginHorizontal="88dp"
            android:src="@drawable/logo"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/rg46w7qbhjf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sc1b0ccsw2cr8bffffff"
            android:paddingVertical="18dp"
            android:paddingHorizontal="6dp"
            android:layout_marginBottom="26dp"
            android:layout_marginHorizontal="45dp"
            android:orientation="vertical">

            <!-- Hint visible y texto en color diferente -->
            <EditText
                android:id="@+id/nameInici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Usuari"
            android:textColor="#000000"
            android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ryysm4twwsr8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sc1b0ccsw2cr8bffffff"
            android:paddingVertical="17dp"
            android:paddingHorizontal="6dp"
            android:layout_marginBottom="25dp"
            android:layout_marginHorizontal="45dp"
            android:orientation="vertical">

            <!-- Campo de contraseña con hint y texto oculto -->
            <EditText
                android:id="@+id/contrasenyaInici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Contrasenya"

            android:textColor="#000000"
            android:textSize="20sp"
            android:inputType="textPassword"
           />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/IniciSessio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/cr8b65558f"
            android:paddingVertical="14dp"
            android:layout_marginBottom="27dp"
            android:layout_marginHorizontal="119dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rgbds0pz75ut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sessió"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/rgan0pzbtku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="43dp"
            android:text="Has perdut la contrasenya?"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Divisor con texto "o" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="45dp"
            android:layout_marginBottom="27dp">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o"
                android:textColor="#000000"
                android:layout_marginHorizontal="10dp"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/IniciGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/cr8b4285f4"
            android:paddingVertical="14dp"
            android:layout_marginBottom="27dp"
            android:layout_marginHorizontal="91dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rtba4i9az09p"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Iniciar Sesión con Google" />
        </LinearLayout>

        <!-- Centramos este TextView -->
        <TextView
            android:id="@+id/Registre"
            android:layout_width="206dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginBottom="212dp"
            android:gravity="center"
            android:text="No tens compte? Registra't"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="151dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="151dp"
            android:text="Skip Auth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

    </LinearLayout>

</LinearLayout>
