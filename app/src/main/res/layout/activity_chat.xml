<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contenedorPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FAFAFA">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"
            android:layout_gravity="center_horizontal">

            <!-- Title and Icon -->
            <LinearLayout
                android:id="@+id/ro7kwbwh61cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!--ImageView
                    android:id="@+id/rj0poccpqqsm"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_back_arrow"/-->

                <TextView
                    android:id="@+id/rr83xc2vb0go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missatges"
                    android:textColor="#4A4A4A"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"/>

            <!-- User Info Section -->
            <LinearLayout
                android:id="@+id/rbm27k22tj8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/r4utngcvbu22"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="string/user_profile_image"
                    android:background="@drawable/circular_border"/>

                <TextView
                    android:id="@+id/ReceiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Another Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- RecyclerView Section for chat messages -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"/>

        <!-- Input and Send Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/write"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Write a message"
                android:textColor="#4A4A4A"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_input"/>

            <ImageButton
                android:id="@+id/send"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:contentDescription="string/send_message"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>





</RelativeLayout>
