<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal que incluye los elementos superiores y el RecyclerView -->
    <LinearLayout
        android:id="@+id/contenedorPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/texto">

        <!-- Elementos superiores (por ejemplo, título y separadores) -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tu contenido superior aquí -->
            <LinearLayout
                android:id="@+id/ro7kwbwh61cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rj0poccpqqsm"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="105dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/rr83xc2vb0go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missatges"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="9dp"
                android:background="#000000" />

            <!-- Información del usuario -->
            <LinearLayout
                android:id="@+id/rbm27k22tj8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/r4utngcvbu22"
                    android:layout_width="43dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/ReceiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JohnDoe456"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Otro separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="19dp"
                android:background="#000000" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- LinearLayout del campo de texto, anclado al fondo -->
    <LinearLayout
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/contenedor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingLeft="17dp"
        android:paddingRight="6dp">

        <EditText
            android:id="@+id/write"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escriu..."
            android:textColor="#1E1E1E"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/ic_media_play" />
    </LinearLayout>

</RelativeLayout>
