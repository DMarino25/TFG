<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2D4E7"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> <!-- Ocupa todo el espacio disponible -->

    <!-- Contenedor principal para el contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <!-- Primera sección de la pantalla -->
        <RelativeLayout
            android:id="@+id/ro6sdib9s2q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rf090803q0ck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr6bc1b0cc"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp">
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <!-- Sección que contiene el contenido principal de la pantalla -->
        <LinearLayout
            android:id="@+id/rtqtm2savc3o"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E2D4E7"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingVertical="28dp">

        <ImageView
            android:id="@+id/ProfilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="#E2D4E7"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/tickButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick"
                android:contentDescription="Save" />
            <ImageView
                android:id="@+id/crossButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                android:contentDescription="Cancel" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/enciado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripció:"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp"
                    ></TextView>
            <EditText
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Introdueix una descripció personal"
                android:textColor="#000000"
                android:textSize="16sp" />
                <ImageView
                android:id="@+id/tickButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick"
                android:contentDescription="Save" />
            <ImageView
                android:id="@+id/crossButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                android:contentDescription="Cancel" />
        </LinearLayout>

            <TextView
                android:id="@+id/JocMJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Joc més jugat:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/rlpsajzldav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gameFavImg"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/hintFG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Introdueix el teu joc més jugat"
                android:textColor="#000000"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/selectGame"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cr6bc1b0cc"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/rcor7axf0grk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/rlx5erhz14o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="21dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/cr6bc1b0cc"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:backgroundTint="#A8D5BA">

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fes un comentari i valoració de l'app"
                android:textColor="@android:color/black"

                android:textSize="16sp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingVertical="0dp">

            <!-- Botón "Tanca Sessó" -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="Tanca Sessió"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp"
                    app:iconGravity="start"
                    app:iconPadding="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Botón "Eliminar Cuenta" -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteAccount"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:text="Eliminar Cuenta"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp"
                    app:iconGravity="start"
                    app:iconPadding="8dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    </LinearLayout>
