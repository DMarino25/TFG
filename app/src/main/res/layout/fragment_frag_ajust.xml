<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E2D4E7"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/ProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:background="#E2D4E7" />

    <!-- Name Field -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tickButton"
            android:layout_toLeftOf="@+id/tickButton"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#6200EE"
            app:hintTextColor="#6200EE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuari"
                android:textColor="#6D4F96"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/tickButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_tick"
            android:contentDescription="Save" />

        <ImageView
            android:id="@+id/crossButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tickButton"
            android:layout_toLeftOf="@id/tickButton"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_cross"
            android:contentDescription="Cancel" />

    </RelativeLayout>

    <!-- Description Field -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tickButton2"
            android:layout_toLeftOf="@+id/tickButton2"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#6200EE"
            app:hintTextColor="#6200EE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripció"
                android:textColor="#6D4F96"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/tickButton2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_tick"
            android:contentDescription="Save" />

        <ImageView
            android:id="@+id/crossButton2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tickButton2"
            android:layout_toLeftOf="@id/tickButton2"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_cross"
            android:contentDescription="Cancel" />

    </RelativeLayout>

    <TextView
        android:id="@+id/JocMJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Joc més jugat:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:textSize="25sp" />

    <!-- Refactored Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp">

        <!-- Game Favorite Image -->
        <ImageView
            android:id="@+id/gameFavImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Hint Text -->
            <TextView
                android:id="@+id/hintFG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Introdueix el teu joc més jugat"
                android:textColor="#000000"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/gameFavImg"
                app:layout_constraintEnd_toStartOf="@id/selectGame"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Select Game Button -->
            <LinearLayout
                android:id="@+id/selectGame"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cr6bc1b0cc"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/rcor7axf0grk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Feedback Section -->
    <LinearLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/cr6bc1b0cc"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:backgroundTint="#A8D5BA">

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fes un comentari i valoració de l'app"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Logout and Delete Account Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- Botón "Tanca Sessó" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/purple_500"
            android:text="Tanca Sessió"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:iconGravity="start"
            app:iconPadding="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Botón "Eliminar Cuenta" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteAccount"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Eliminar Cuenta"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:iconGravity="start"
            app:iconPadding="8dp" />
    </LinearLayout>

</LinearLayout>
