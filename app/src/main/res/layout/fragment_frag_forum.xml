<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido desplazable -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- ScrollView para los foros -->
        <ScrollView
            android:id="@+id/rgpowdt6it0j"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Barra de búsqueda y otros componentes -->
                <LinearLayout
                    android:id="@+id/rl8ckxf857k"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#6D4F96"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rlml7b6bnyz"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#D9D9D9"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/go3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@android:drawable/ic_search_category_default" />

                        <EditText
                            android:id="@+id/cerca3"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:hint="Cerca..." />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/ruxkxe1is89i"
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/s2c2c2csw1cr32b4a3b73"
                        android:paddingHorizontal="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/r0qkqjooxdnji"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginTop="8dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sección de los foros -->
                <LinearLayout
                    android:id="@+id/ra8zgwaz9oh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E2D4E7"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewForums"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingTop="0dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Botón flotante que se mantiene en la esquina inferior derecha -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createForumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_add_24"
        android:contentDescription="Añadir foro"
        android:tint="@android:color/white" />

</FrameLayout>
