<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rgpowdt6it0j"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl8ckxf857k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#6D4F96"
                android:paddingVertical="3dp"
                android:paddingHorizontal="12dp"
                android:orientation="horizontal">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rlml7b6bnyz"
                    android:layout_width="292dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#D9D9D9"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="11dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rq7m044jk5rn"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="13dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/r6cqlkwo44fr"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Cerca..."
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ruxkxe1is89i"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s2c2c2csw1cr32b4a3b73"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/r0qkqjooxdnji"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ra8zgwaz9oh"
                android:layout_width="match_parent"
                android:layout_height="695dp"
                android:background="#E2D4E7"
                android:orientation="vertical"
                android:paddingTop="43dp"
                android:paddingBottom="23dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewForums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/createForumButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    android:contentDescription="Create Forum Button"
                    android:src="@drawable/baseline_add_24"
                    app:backgroundTint="#6200EE"
                    android:layout_gravity="end|bottom"
                    app:maxImageSize="56dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>